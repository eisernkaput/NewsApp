<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp"
    android:layout_marginBottom="16dp"
    android:baselineAligned="false">


    <TextView
        android:id="@+id/section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/sectionTextColor"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        tools:text="News" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/textColorEarthquakeLocation"
        android:textSize="16sp"
        tools:text="‘Everybody feels fragile’: Guy Pearce on fame, family pressures and fatherhood at 50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/timeTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            tools:text="20:45" />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/dateTextColor"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            tools:text="2018-08-24" />

        <TextView
            android:id="@+id/author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:layout_weight="1"
            android:textColor="@color/authorTextColor"
            android:textSize="12sp"
            android:gravity="end"
            android:textStyle="italic"
            tools:text="Emine Saner Emine Saner Emine Saner"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</LinearLayout>